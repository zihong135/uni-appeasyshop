.goodlist {
  padding: 0 15rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.goodlist .gooditem {
  background-color: #fff;
  width: 355rpx;
  margin: 10rpx 0;
  padding: 15rpx;
  box-sizing: border-box;
}
.goodlist .gooditem image {
  width: 80%;
  height: 300rpx;
  display: block;
  margin: 0 auto;
}
.goodlist .gooditem .price {
  color: #b50e03;
  font-size: 36rpx;
  margin: 20rpx 0 5rpx 0;
}
.goodlist .gooditem .price text:nth-child(2) {
  color: #ccc;
  font-size: 28rpx;
  margin-left: 17rpx;
  text-decoration: line-through;
}
.goodlist .gooditem .name {
  font-size: 28rpx;
  line-height: 50rpx;
  padding-bottom: 15rpx;
  padding-top: 10rpx;
}

